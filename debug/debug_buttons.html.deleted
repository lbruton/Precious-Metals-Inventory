<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Button Debug Test</title>
    <style>
        .app-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            width: 100%;
            padding: 1rem;
            background: #f8fafc;
            border-radius: 8px;
            border: 1px solid #e2e8f0;
        }
        
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            background: #2563eb;
            color: white;
            cursor: pointer;
            margin-left: 0.5rem;
        }
        
        .btn:hover {
            background: #1d4ed8;
        }
        
        #debug-output {
            margin-top: 2rem;
            padding: 1rem;
            background: #f1f5f9;
            border-radius: 8px;
            white-space: pre-wrap;
        }
    </style>
</head>
<body>
    <div class="app-header">
        <h1>Button Debug Test</h1>
        <div style="margin-left: auto; display: flex; gap: 0.5rem;">
            <button class="btn" id="apiBtn" title="API Configuration">API</button>
            <button class="btn" id="themeToggle">Dark Mode</button>
        </div>
    </div>
    
    <div id="debug-output">Debug output will appear here...</div>

    <script>
        function log(message) {
            const output = document.getElementById('debug-output');
            output.textContent += new Date().toLocaleTimeString() + ': ' + message + '\n';
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            log('DOM Content Loaded');
            
            const apiBtn = document.getElementById('apiBtn');
            const themeToggle = document.getElementById('themeToggle');
            
            log('API Button found: ' + (apiBtn ? 'YES' : 'NO'));
            log('Theme Toggle found: ' + (themeToggle ? 'YES' : 'NO'));
            
            if (apiBtn) {
                log('Adding API button event listener...');
                apiBtn.addEventListener('click', function() {
                    log('API button clicked!');
                    alert('API button works!');
                });
            }
            
            if (themeToggle) {
                log('Adding theme toggle event listener...');
                themeToggle.addEventListener('click', function() {
                    log('Theme toggle clicked!');
                    alert('Theme toggle works!');
                });
            }
            
            log('Event listeners setup complete');
        });
    </script>
</body>
</html>